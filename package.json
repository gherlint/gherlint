{
    "name": "gherlint",
    "version": "1.0.0-alpha.1",
    "description": "A pattern checker for Gherkin language.",
    "bin": "./bin/gherlint.js",
    "main": "./lib/index.js",
    "author": "Sajan Gurung <me.sawjan@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/gherlint/gherlint.git"
    },
    "bugs": {
        "url": "https://github.com/gherlint/gherlint.git/issues"
    },
    "keywords": [
        "lint",
        "gherkin",
        "cucumber",
        "bdd"
    ],
    "engines": {
        "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
    },
    "packageManager": "yarn@3.2.1",
    "scripts": {
        "lint": "eslint './**/*.js'",
        "test:unit": "jest",
        "commitlint": "commitlint --edit",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable"
    },
    "dependencies": {
        "@cucumber/gherkin": "^24.0.0",
        "@cucumber/messages": "^19.1.2",
        "commander": "^9.1.0",
        "glob": "^7.2.0",
        "lodash": "^4.17.21",
        "minimatch": "^5.0.1",
        "terminal-kit": "^2.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "eslint": "^8.13.0",
        "eslint-plugin-jest": "^26.5.3",
        "husky": "^8.0.1",
        "jest": "^28.1.2",
        "pinst": "^3.0.0"
    }
}
